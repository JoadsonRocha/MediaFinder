{
  "name": "mediafinder",
  "version": "2.1.0",
  "description": "Organizador de vídeos locais com thumbnails automáticas",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --win"
  },
  "author": "Joadson Rocha <joadson.dev@gmail.com>",
  "build": {
    "appId": "com.mediafinder.app",
    "productName": "MediaFinder",
    "directories": {
      "output": "dist"
    },
    "files": [
      "app/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "ffmpeg",
        "to": "ffmpeg",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "icon": "app/mediaFinder.ico",
      "target": [
        "nsis",
        "portable"
      ]
    }
  },
  "dependencies": {
    "build": "^0.1.4",
    "fluent-ffmpeg": "^2.1.3"
  },
  "devDependencies": {
    "electron": "^39.1.1",
    "electron-builder": "^25.1.8"
  }
}
